<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/category_edit"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"/>

    <Button
            android:id="@+id/refine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="追加" android:layout_marginRight="0dp"/>

    <EditText
            android:id="@+id/category_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="カテゴリー"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/category_edit"
            android:id="@+id/listView" android:layout_marginTop="0dp" android:layout_marginBottom="0dp"/>

</RelativeLayout>